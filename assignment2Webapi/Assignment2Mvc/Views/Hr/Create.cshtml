    <body>

        <h4>Hr</h4>
        <hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="EmpPayrollInfo" class="control-label">Employee Payroll Info</label>
                        <input asp-for="EmpPayrollInfo" class="form-control" />
