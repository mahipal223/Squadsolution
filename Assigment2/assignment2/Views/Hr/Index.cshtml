@model IEnumerable<assignment2.Models.Hr>


<!DOCTYPE html>

<html>

    <head>
        <meta name="viewport" content="width=device-width" />
        <title>Index</title>
    </head>

    <body>
        <p>
            <a asp-action="Create">Create New</a>
        </p>
        <table class="table">
            <thead>
                <tr>
                    <th>
                    @Html.DisplayNameFor(model => model.EmpPayrollInfo)
                    </th>
                    <th>
                    @Html.DisplayNameFor(model => model.SocialSecurityNo)
                    </th>
                    <th>
                    @Html.DisplayNameFor(model => model.Salary)
                    </th>
                    <th>
                    @Html.DisplayNameFor(model => model.Emp)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                    <tr>
                        <td>
                        @Html.DisplayFor(modelItem => item.EmpPayrollInfo)
                        </td>
                        <td>
                        @Html.DisplayFor(modelItem => item.SocialSecurityNo)
                        </td>
                        <td>
                        @Html.DisplayFor(modelItem => item.Salary)
                        </td>
                        <td>
                        @Html.DisplayFor(modelItem => item.Emp.EmpId)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.HrId">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.HrId">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.HrId">Delete</a>
                        </td>
                    </tr>
            }
            </tbody>
        </table>
    </body>

</html>
