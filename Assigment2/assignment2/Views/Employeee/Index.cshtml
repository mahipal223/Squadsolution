@model IEnumerable<assignment2.Models.Employeee>


<!DOCTYPE html>

<html>

    <head>
        <meta name="viewport" content="width=device-width" />
        <title>Index</title>
    </head>

    <body>
        <p>
            <a asp-action="Create">Create New</a>
        </p>
        <table class="table h-50">
            <thead>
                <tr>
                    <th>
                    @Html.DisplayNameFor(model => model.FirstName)
                    </th>
                    <th>
                    @Html.DisplayNameFor(model => model.LastName)
                    </th>
                    <th>
                    @Html.DisplayNameFor(model => model.ContactNo)
                    </th>
                    <th>
                    @Html.DisplayNameFor(model => model.HomeAddress)
                    </th>
                    <th>
                    @Html.DisplayNameFor(model => model.WorkLocation)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                @if (@item.IsActive == true)
                {
                        <tr>
                            <td>
                            @Html.DisplayFor(modelItem => item.FirstName)
                            </td>
                            <td>
                            @Html.DisplayFor(modelItem => item.LastName)
                            </td>
                            <td>
                            @Html.DisplayFor(modelItem => item.ContactNo)
                            </td>
                            <td>
                            @Html.DisplayFor(modelItem => item.HomeAddress)
                            </td>
                            <td>
                            @Html.DisplayFor(modelItem => item.WorkLocation)
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.EmpId">Edit</a>
                                <a asp-action="Delete" asp-route-id="@item.EmpId">Delete</a>
                                <a asp-action="SoftDelete" asp-route-id="@item.EmpId">Soft Delete</a>
                            </td>
                        </tr>
                }
            }
            </tbody>
        </table>


        <section class="mt-5">
            <table class="table">
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Contact no</th>
                    <th>Home address</th>
                    <th>Work location</th>
                </tr>
            @{
                foreach (var item in ViewBag.data2)
                {
                        <tr>
                            <td>@item.FirstName</td>
                            <td>@item.LastName</td>
                            <td>@item.ContactNo</td>
                            <td>@item.HomeAddress</td>
                            <td>@item.WorkLocation</td>
                        </tr>
                }
            }
            </table>
        </section>
    </body>

</html>
