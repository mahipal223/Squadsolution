@model Assigment1.Models.Department
@{
    ViewData["Title"] = "Edit";
}

<div class="container mt-5">
    <form asp-action="Edit" method="post">
        @Html.HiddenFor(m => m.DepId)
        <div class="row">
            <div class="col-2">
                <label asp-for="DepartmentName" class="fw-bold">Department Name :</label>
            </div>
            <div class="col-10">
                <input asp-for="DepartmentName" />
                <span asp-validation-for="DepartmentName"></span>
            </div>
        </div>
        <div class="row mt-3">
            <div>
                <input type="submit" value="Submit" class="btn btn-primary">
            </div>
        </div>
    </form>
</div>
