@model Assigment1.Models.Employee
@{
    ViewData["Title"] = "Create";
}
<div class="container row d-flex flex-column">
    <form asp-action="Create" method="post">
        <div class="form-group col-5">
            <label asp-for="EmpName" class="pb-1 fw-bold">Employee Name :</label>
            <input asp-for="EmpName" class="form-control" />
            <span asp-validation-for="EmpName" class="text-danger"></span>
        </div>
        <div class="mt-3">
            <label asp-for="Departments" class="pb-1 fw-bold">Department Name :</label>
            <select asp-for="DepId" asp-items="@(new SelectList(@ViewBag.list,"DepId", "DepartmentName"))"></select>
        </div>
        <div class="form-group col-5 mt-3">
            <label asp-for="Salary" class="pb-1 fw-bold">Salary :</label>
            <input asp-for="Salary" class="form-control" />
            <span asp-validation-for="Salary" class="text-danger"></span>
        </div>
        <div>
            <input type="submit" value="Submit" class="btn btn-primary mt-3">
        </div>
    </form>
</div>