@model Assigment1.Models.Employee;


@{
    ViewData["Title"] = "Create";
}
<div class="container row d-flex flex-column">
    <form asp-action="Create" method="post">

        <div class="form-group col-5">
            <label asp-for="EmpName" class="pb-1 fw-bold">Employee Name :</label>
            <input asp-for="EmpName" class="form-control" />
            <span asp-validation-for="EmpName" class="text-danger"></span>
        </div>
        <div class="mt-3">
            <label asp-for="Departments" class="pb-1 fw-bold">Department Name :</label>
            <select asp-for="DepId" asp-items="@(new SelectList(@ViewBag.list,"DepId", "DepartmentName"))"
                onchange="change(this.value)">
                <option default>--Select--</option>
                <option value="0">New Add</option>
            </select>
        </div>
        <div class="form-group col-5 mt-3" id="textBoxShow" hidden>
            <label id="textBoxShow" class="pb-1 fw-bold">Add New Depatment :</label>
            <input asp-for="Departments.DepartmentName" id="textBoxShow" class="form-control" />
            <span asp-validation-for="Departments.DepartmentName" id="textBoxShow" class="text-danger"></span>
        </div>
        <div class="form-group col-5 mt-3">
            <label asp-for="Salary" class="pb-1 fw-bold">Salary :</label>
            <input asp-for="Salary" class="form-control" />
        </div>
        <div>
            <input type="submit" value="Submit" class="btn btn-primary mt-3">
        </div>
    </form>
</div>

